<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nameAlbum" />

    <EditText
        android:id="@+id/coverEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/cover" />

    <EditText
        android:id="@+id/releaseDateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/releaseDate" />

    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/description" />

    <EditText
        android:id="@+id/genreEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/genre" />

    <EditText
        android:id="@+id/recordLabelEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/recordLabel" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit" />

</LinearLayout>